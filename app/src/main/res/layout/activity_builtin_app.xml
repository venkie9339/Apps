<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rayan.venki.apps.BuiltinApp">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:id="@+id/btncmr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openApp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open Caller"
        android:id="@+id/btnclr"
        android:layout_below="@+id/btncmr"
        android:layout_alignRight="@+id/btncmr"
        android:layout_alignEnd="@+id/btncmr"
        android:onClick="openApp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open Google"
        android:id="@+id/btnopnggl"
        android:layout_below="@+id/btnclr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openApp" />
</RelativeLayout>
